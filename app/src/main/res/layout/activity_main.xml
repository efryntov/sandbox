<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/vpn_mode_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="VPN mode "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/network_interfaces_ips_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Interfaces IPs"
        app:layout_constraintBottom_toTopOf="@+id/all_networks_ips_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/all_networks_ips_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Networks IPs"
        app:layout_constraintBottom_toTopOf="@+id/active_link_properties_ips_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/network_interfaces_ips_button" />

    <Button
        android:id="@+id/active_link_properties_ips_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active Link Properties IPs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/all_networks_ips_button" />

</androidx.constraintlayout.widget.ConstraintLayout>